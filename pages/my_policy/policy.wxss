    width:50rpx;
    height:10px;
    margin-left:20rpx;
    margin-right:20rpx;
}
.goodsDescription{
    width:600rpx;
}
.goodsDescription .goodsArea{
    height:25px;
    line-height:25px;
    margin-top:3px;
}
