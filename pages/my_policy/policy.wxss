}
.insuranceInformation{
    width:600rpx;
}
.sRight_Arrow{
    width:110rpx;
    height:40px;
    line-height:40px;
    text-align: right;
}
.sRight_Arrow image{
    width:20px;
    height:20px;
    vertical-align: middle;
}
